{
    "name": "2026 Multi-Agent Lab",
    "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
    "features": {
        // ğŸ›¡ï¸ The Bridge: Allows Cursor/SSH to connect to the cloud
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        },
        // ğŸ“¦ Node.js: Needed for building GUIs
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        // ğŸ³ Docker-in-Docker: In case you want to test containerized agents
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        // ğŸ“¦ Nix: Needed for package management
        "ghcr.io/devcontainers/features/nix:1": {
        "version": "latest"
    }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "tamasfe.even-better-toml",
                "christian-kohler.path-intellisense"
            ],
            "settings": {
                //"python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

                "editor.formatOnSave": true
            }
        }
    },
    // ğŸš€ Automation: Runs the first time the lab is built
    //"postCreateCommand": "pip install --upgrade pip && pip install crewai langgraph langchain pydantic-ai",
    "postCreateCommand": "nix develop -c bash -lc 'uv sync --quiet'",

    
    "remoteUser": "vscode"
}
